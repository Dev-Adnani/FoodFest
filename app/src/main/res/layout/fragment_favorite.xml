<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".fragment.FavoriteFragment">

    <ImageView
        android:id="@+id/nothingFavIV"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:visibility="invisible"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_sad"
        android:layout_marginBottom="20dp"
        android:layout_above="@id/nothingFavTV" />


    <TextView
        android:id="@+id/nothingFavTV"
        android:text="@string/no_data_found_in_favourite"
        android:fontFamily="@font/lemon_med"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:visibility="invisible"
        android:textColor="@color/white"
        android:textSize="26sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/favRecycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:padding="10dp" />

    <RelativeLayout
        android:id="@+id/progressFavLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black">

        <ProgressBar
            android:theme="@style/CircularProgress"
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />


    </RelativeLayout>

</RelativeLayout>